resources:
  requests:
    cpu: '100m'
    memory: '100Mi'
  limits:
    cpu: '100m'
    memory: '100Mi'
storage:
  size: 50Gi
env:
  ASYNC_INDEXING: true
  PERSISTENCE_LSM_ACCESS_STRATEGY: 'mmap'
  DISABLE_TELEMETRY: 'true'
  PERSISTENCE_HNSW_MAX_LOG_SIZE: '5MB'
  PERSISTENCE_HNSW_SNAPSHOT_INTERVAL_SECONDS: '30'
  PERSISTENCE_HNSW_DISABLE_SNAPSHOTS: 'false'

backups:
  s3:
    enabled: true
    envconfig:
      BACKUP_S3_ENDPOINT: 'backup-s3:9000'
      BACKUP_S3_BUCKET: 'weaviate-backups'
      BACKUP_S3_USE_SSL: 'false'
